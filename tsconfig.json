{
  "compilerOptions": {
    "target": "es2019",
    "module": "es2022",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./www/",
    "noEmit": false,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@model/*": ["src/model/*"],
      "@pages/*": ["src/pages/*"]
    },
    "types": ["vite/client"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "files": ["./src/index.tsx"],
  "include": ["src/**/*", "node_modules/@types/jest"]
}
